<div class="article-teaser">
  <h1 class="article-teaser__title"><%= link_to markdown(article.title), article %></h1>

    <div class="row article-teaser__meta-info">
      <div class="col-xs-6 col-sm-3">
        <div class="article-teaser__date"><%= article.date.strftime('%B %e, %Y') %> </div>
      </div>

      <div class="col-xs-6 col-sm-3">
        <div class="article-teaser__read-time"><%= markdown_file_read_time(article.source_file) %></div>
      </div>

      <div class="col-xs-12 col-sm-6">
        <% if article.tags.size > 0 %>
          <div class="article-teaser__tags">
            <% article.tags.sort.each do |tag| %>
              <%= link_to tag, tag_path(tag) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  <p><%= markdown(article.data.description) %></p>
</div>
