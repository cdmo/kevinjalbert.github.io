<%= partial :header %>

<div class="content article">
  <h1 class="article__title"><%= current_page.data.title %> </h1>

  <% if current_page.tags.size > 0 %>
    <span class="article__tags">
      <% current_page.data.tags.each_with_index do |tag, index| %>
        <%= link_to tag, tag_path(tag) %><% if index != current_page.data.tags.size - 1 %>, <% end %>
      <% end %>
    </span>
  <% end %>

  <p class="article__date"><%= current_page.date.strftime('%B %e, %Y') %> </h1>

  <%= yield %>
</div>

<%= partial :footer %>
